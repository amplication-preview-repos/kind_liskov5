datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        Int      @id @default(autoincrement())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model BuildingProject {
  adress       Adress?        @relation(fields: [adressId], references: [id])
  adressId     Int?
  construction Construction[]
  createdAt    DateTime       @default(now())
  id           Int            @id @default(autoincrement())
  updatedAt    DateTime       @updatedAt
}

model Construction {
  adress             Adress?          @relation(fields: [adressId], references: [id])
  adressId           Int?
  buildingProjects   BuildingProject? @relation(fields: [buildingProjectsId], references: [id])
  buildingProjectsId Int?
  createdAt          DateTime         @default(now())
  id                 Int              @id @default(autoincrement())
  updatedAt          DateTime         @updatedAt
}

model Adress {
  buildingProjects BuildingProject[]
  city             String?
  constructions    Construction[]
  country          String?
  createdAt        DateTime          @default(now())
  id               Int               @id @default(autoincrement())
  postcode         String?
  state            String?
  streetname       String?
  updatedAt        DateTime          @updatedAt
}

model HazardousSubstance {
  createdAt DateTime @default(now())
  id        Int      @id @default(autoincrement())
  updatedAt DateTime @updatedAt
}

model Component {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String?
  updatedAt DateTime @updatedAt
}
